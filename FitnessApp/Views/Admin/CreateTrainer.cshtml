@model FitnessApp.Models.Trainer

@{
    ViewData["Title"] = "Create Trainer";
}

<h1 class="text-center form-title">Create Trainer</h1>

<div class="d-flex justify-content-center align-items-center create-form-wrapper">
    <form asp-action="CreateTrainer" method="post" class="create-session-form">
        <!-- Trainer Name -->
        <div class="form-group mb-3">
            <label asp-for="Name" class="form-label">Trainer Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <!-- Actions -->
        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="Dashboard" asp-controller="Admin" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

<link rel="stylesheet" href="~/css/create-trainer.css" asp-append-version="true" />
