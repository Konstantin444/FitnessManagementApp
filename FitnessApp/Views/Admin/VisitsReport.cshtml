@{
    ViewData["Title"] = "Отчет за посещения";
}

<h2>Отчет за посещения</h2>

<form method="get" asp-action="VisitsReport">
    <div class="form-group">
        <label for="startDate">Начална дата:</label>
        <input type="date" name="startDate" id="startDate" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="endDate">Крайна дата:</label>
        <input type="date" name="endDate" id="endDate" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Генерирай отчет</button>
</form>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}
else if (ViewBag.TotalVisits != null)
{
    <h3>Посещения за периода @ViewBag.StartDate – @ViewBag.EndDate</h3>
    <p>Общият брой посещения е: <strong>@ViewBag.TotalVisits</strong></p>
}
