@model IEnumerable<Trainer>

<section class="request-training-section">
    <div class="container">
        <div class="text-center mb-4">
            <h1>Request Personal Training</h1>
            <p class="subheading">Choose a trainer and request a session that fits your schedule.</p>
        </div>

        @if (Model == null || !Model.Any())
        {
            <div class="alert alert-warning text-center" role="alert">
                No trainers are currently available. Please check back later.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <thead class="thead-light">
                        <tr>
                            <th>Trainer Name</th>
                            <th>Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var trainer in Model)
                        {
                            <tr>
                                <td>@trainer.Name</td>
                                <td>
                                    <form method="post" action="/TrainingSessions/RequestTraining" class="d-flex align-items-center">
                                        <input type="hidden" name="trainerId" value="@trainer.Id" />
                                        <input type="date" name="date" id="date-@trainer.Id" required class="form-control me-2" />
                                        <button type="submit" class="btn btn-primary">Request Training</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="text-center mt-4">
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        }
    </div>
</section>

<link rel="stylesheet" href="/css/request-training.css" />
