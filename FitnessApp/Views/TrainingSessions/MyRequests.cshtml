@model IEnumerable<PersonalTrainingRequest>

@{
    ViewData["Title"] = "Personal Training Requests";
}

<h1 class="text-center form-title">My Personal Training Requests</h1>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info text-center" role="alert">
        You have not made any personal training requests yet.
    </div>
}
else
{
    <div class="requests-wrapper">
        <div class="row g-4">
            @foreach (var request in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="request-card">
                        <div class="card-header">@request.Trainer?.Name</div>
                        <div class="card-body">
                            <p><strong>Date:</strong> @request.Date.ToString("f")</p>
                            <p>
                                <strong>Status:</strong>
                                <span class="status-text @(request.Status == "Approved" ? "status-approved" : request.Status == "Rejected" ? "status-rejected" : "status-pending")">
                                    @request.Status
                                </span>
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="d-flex justify-content-center mt-4">
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
}

<link rel="stylesheet" href="~/css/personal-training-requests.css" asp-append-version="true" />
