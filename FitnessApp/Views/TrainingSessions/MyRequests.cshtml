@model IEnumerable<PersonalTrainingRequest>

<h2>My Personal Training Requests</h2>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info" role="alert">
        You have not made any personal training requests yet.
    </div>
}
else
{
    <table class="table table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Trainer</th>
                <th>Date</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var request in Model)
            {
                <tr>
                    <td>@(request.Trainer?.Name ?? "Trainer Not Found")</td>
                    <td>@request.Date.ToString("f")</td>
                    <td>
                        <span class="badge
                            @(request.Status == "Approved" ? "bg-success" :
                              request.Status == "Rejected" ? "bg-danger" : "bg-warning")">
                            @request.Status
                        </span>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
