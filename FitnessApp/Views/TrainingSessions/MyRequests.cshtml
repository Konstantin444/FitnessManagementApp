@model IEnumerable<PersonalTrainingRequest>

<section class="personal-requests-section">
    <div class="container">
        <div class="text-center mb-4">
            <h2>My Personal Training Requests</h2>
            <p>Track the status of your requests and manage them with ease.</p>
        </div>

        @if (Model == null || !Model.Any())
        {
            <div class="alert alert-info text-center" role="alert">
                <strong>No requests found.</strong> You have not made any personal training requests yet.
            </div>
        }
        else
        {
            <div class="table-responsive shadow-lg p-3 rounded bg-white">
                <table class="table table-striped table-hover align-middle">
                    <thead class="bg-primary text-white">
                        <tr>
                            <th>Trainer</th>
                            <th>Date</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var request in Model)
                        {
                            <tr>
                                <td>@(request.Trainer?.Name ?? "Trainer Not Found")</td>
                                <td>@request.Date.ToString("f")</td>
                                <td>
                                    <span class="badge
                                        @(request.Status == "Approved" ? "bg-success" :
                                        request.Status == "Rejected" ? "bg-danger" : "bg-warning")">
                                        @request.Status
                                    </span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Back to List Button -->
            <div class="d-flex justify-content-center mt-4">
                <a asp-action="Index" class="btn btn-secondary btn-lg">Back to List</a>
            </div>
        }
    </div>
    <link rel="stylesheet" href="/css/my-requests.css" />
</section>
