@using System.Security.Claims
@model IEnumerable<FitnessApp.Models.TrainingSession>

@{
    ViewData["Title"] = "Training Sessions";
    var isAdmin = User.IsInRole("Admin");
    var isMember = User.IsInRole("Member");
}

<section class="hero-section text-center">
    <div class="container">
        <h1 class="hero-title">Explore Our Training Sessions</h1>
        <p class="hero-description">Find a session that fits your schedule and join today!</p>
        @if (isAdmin)
        {
            <a asp-action="Create" class="btn btn-primary hero-btn">Create New Session</a>
        }
    </div>
</section>

@if (isMember)
{
    <section class="personal-training-section">
        @if (isMember)
        {
            <div class="d-flex align-items-center mb-3">
                <h2 class="mb-0 me-3">Request Personal Training</h2>
                <a asp-action="RequestTraining" class="btn btn-primary">Request Personal Training</a>
            </div>

            @if (ViewBag.PersonalTrainingRequests != null &&
           ((IEnumerable<FitnessApp.Models.PersonalTrainingRequest>)ViewBag.PersonalTrainingRequests).Any())
            {
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Trainer</th>
                            <th>Date</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var request in ViewBag.PersonalTrainingRequests as IEnumerable<FitnessApp.Models.PersonalTrainingRequest>)
                        {
                            <tr>
                                <td>@(request.Trainer?.Name ?? "Trainer Not Found")</td>
                                <td>@request.Date.ToString("f")</td>
                                <td>
                                    <span class="badge
                                    @(request.Status == "Approved" ? "bg-success" :
                                      request.Status == "Rejected" ? "bg-danger" : "bg-warning")">
                                        @request.Status
                                    </span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <h3>My Personal Training Requests</h3>
                <p class="text-center">No personal training requests found.</p>
            }
        }
    </section>
}

<section class="sessions-section">
    <div class="container">
        <div class="row g-4">
            @foreach (var session in Model)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="session-card">
                        <h3 class="session-title">@session.Name</h3>
                        <p><strong>Trainer:</strong> @(session.Trainer?.Name ?? "No Trainer")</p>
                        <p><strong>Date:</strong> @session.SessionDateTime.ToString("f")</p>
                        <p><strong>Available Slots:</strong> @(session.MaxParticipants - (session.Reservations?.Count() ?? 0))</p>
                        <div class="card-actions">
                            @if (isAdmin)
                            {
                                <a asp-action="Edit" asp-route-id="@session.SessionId" class="btn btn-warning btn-sm">Edit</a>
                                <a asp-action="Details" asp-route-id="@session.SessionId" class="btn btn-info btn-sm">Details</a>
                                <a asp-action="Delete" asp-route-id="@session.SessionId" class="btn btn-danger btn-sm">Delete</a>
                            }
                            else if (isMember)
                            {
                                <button class="btn btn-primary btn-sm reserve-btn"
                                        data-bs-toggle="modal"
                                        data-bs-target="#reserveModal"
                                        data-session-id="@session.SessionId"
                                        data-session-name="@session.Name"
                                        data-session-trainer="@(session.Trainer?.Name ?? "No Trainer")"
                                        data-session-date="@session.SessionDateTime.ToString("f")"
                                        data-max-participants="@session.MaxParticipants"
                                        data-available-slots="@(session.MaxParticipants - (session.Reservations?.Count() ?? 0))">
                                    Reserve
                                </button>
                                <a asp-action="Details" asp-route-id="@session.SessionId" class="btn btn-info btn-sm">Details</a>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>



<!-- Reserve Modal -->
<div class="modal fade" id="reserveModal" tabindex="-1" aria-labelledby="reserveModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="reserveModalLabel">Session Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p><strong>Name:</strong> <span id="sessionName"></span></p>
                <p><strong>Trainer:</strong> <span id="sessionTrainer"></span></p>
                <p><strong>Date:</strong> <span id="sessionDate"></span></p>
                <p><strong>Available Slots:</strong> <span id="availableSlots"></span></p>
                <div id="modalError" class="text-danger mt-2" style="display: none;"></div>
            </div>
            <div class="modal-footer">
                <button id="reserveButton" class="btn btn-primary">Join Session</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="/css/training-sessions.css" />
<script src="/js/reserve-modal.js"></script>
