@using System.Security.Claims
@model IEnumerable<FitnessApp.Models.TrainingSession>

@{
    ViewData["Title"] = "Training Sessions";
    var isAdmin = User.IsInRole("Admin");
    var isMember = User.IsInRole("Member");
}

<h1>Training Sessions</h1>

@if (isAdmin)
{
    <p>
        <a asp-action="Create" class="btn btn-primary">Create New Session</a>
    </p>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Trainer</th>
            <th>Session Date and Time</th>
            <th>Max Participants</th>
            <th>Available Slots</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Trainer)</td>
                <td>@item.SessionDateTime.ToString("g")</td>
                <td>@item.MaxParticipants</td>
                <td>
                    @(item.MaxParticipants - (item.Reservations?.Count() ?? 0))
                </td>
                <td>
                    @if (isAdmin)
                    {
                        <a asp-action="Edit" asp-route-id="@item.SessionId" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.SessionId" class="btn btn-sm btn-info">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.SessionId" class="btn btn-sm btn-danger">Delete</a>
                    }
                    else if (isMember)
                    {
                        <button class="btn btn-sm btn-primary"
                                data-bs-toggle="modal"
                                data-bs-target="#reserveModal"
                                data-session-id="@item.SessionId"
                                data-session-name="@item.Name"
                                data-session-trainer="@item.Trainer"
                                data-session-date="@item.SessionDateTime.ToString("g")"
                                data-max-participants="@item.MaxParticipants"
                                data-available-slots="@(item.MaxParticipants - (item.Reservations?.Count() ?? 0))"
                                data-is-user-reserved="@item.Reservations.Any(r => r.UserId == User.FindFirstValue(System.Security.Claims.ClaimTypes.NameIdentifier))">
                            Reserve
                        </button>
                        <a asp-action="Details" asp-route-id="@item.SessionId" class="btn btn-sm btn-info">Details</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Modal -->
<div class="modal fade" id="reserveModal" tabindex="-1" aria-labelledby="reserveModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="reserveModalLabel">Session Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Placeholder for session details -->
                <p><strong>Name:</strong> <span id="sessionName"></span></p>
                <p><strong>Trainer:</strong> <span id="sessionTrainer"></span></p>
                <p><strong>Date:</strong> <span id="sessionDate"></span></p>
                <p><strong>Max Participants:</strong> <span id="maxParticipants"></span></p>
                <p><strong>Available Slots:</strong> <span id="availableSlots"></span></p>

                <!-- Error message -->
                <div id="modalError" class="text-danger" style="display: none; margin-top: 10px;"></div>
            </div>
            <div class="modal-footer">
                <button id="reserveButton" class="btn btn-success">Join Session</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script src="/js/reserve-modal.js"></script>