@model IEnumerable<FitnessApp.Models.PersonalTrainingRequest>

<h1>Pending Training Requests</h1>

@if (!Model.Any())
{
    <div class="alert alert-info" role="alert">
        There are no pending requests at the moment.
    </div>
}
else
{
    <table class="table table-bordered table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Member</th>
                <th>Trainer</th>
                <th>Date</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var request in Model)
            {
                <tr>
                    <td>@(request.Member?.UserName ?? "Unknown Member")</td>
                    <td>@(request.Trainer?.Name ?? "Unknown Trainer")</td>
                    <td>@request.Date.ToString("f")</td>
                    <td>
                        <span class="badge bg-warning">@request.Status</span>
                    </td>
                    <td>
                        <form method="post" asp-action="UpdateRequestStatus">
                            <input type="hidden" name="id" value="@request.Id" />
                            <button type="submit" name="status" value="Approved" class="btn btn-success btn-sm">Approve</button>
                            <button type="submit" name="status" value="Rejected" class="btn btn-danger btn-sm">Reject</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
