@model FitnessApp.Models.TrainingSession

@{
    ViewData["Title"] = "Delete Training Session";
}

<section class="delete-session-section">
    <div class="container">
        <!-- Header Section -->
        <div class="text-center mb-4">
            <h1>Delete Training Session</h1>
            <p class="text-muted">Are you sure you want to delete this session?</p>
        </div>

        <!-- Session Information -->
        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <h4 class="card-title text-danger">Training Session Details</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-4">Session Name:</dt>
                    <dd class="col-sm-8">@Model.Name</dd>

                    <dt class="col-sm-4">Trainer:</dt>
                    <dd class="col-sm-8">@Model.Trainer?.Name ?? "No Trainer Assigned"</dd>

                    <dt class="col-sm-4">Date & Time:</dt>
                    <dd class="col-sm-8">@Model.SessionDateTime.ToString("g")</dd>

                    <dt class="col-sm-4">Max Participants:</dt>
                    <dd class="col-sm-8">@Model.MaxParticipants</dd>
                </dl>
            </div>
        </div>

        <!-- Confirm Deletion -->
        <div class="d-flex justify-content-between">
            <form asp-action="Delete" method="post" class="d-inline">
                <input type="hidden" asp-for="SessionId" />
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Delete
                </button>
            </form>

            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</section>

@section Styles {
    <link href="~/css/delete-session.css" rel="stylesheet" />
}
