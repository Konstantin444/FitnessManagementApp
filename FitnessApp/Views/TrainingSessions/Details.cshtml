@using System.Security.Claims
@model FitnessApp.Models.TrainingSession

@{
    ViewData["Title"] = "Details";
    var userId = User.FindFirstValue(ClaimTypes.NameIdentifier); // Current logged-in user's ID
    var isMember = User.IsInRole("Member");
    var isAdmin = User.IsInRole("Admin");
}

<section class="details-session-section">
    <div class="container">
        <!-- Header Section -->
        <div class="text-center mb-4">
            <h1>@Model.Name</h1>
            <p class="text-muted">Details of the training session</p>
        </div>

        <!-- Session Information -->
        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <h4 class="card-title text-primary">Training Session Information</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-4">Session Name:</dt>
                    <dd class="col-sm-8">@Model.Name</dd>

                    <dt class="col-sm-4">Trainer:</dt>
                    <dd class="col-sm-8">@Model.Trainer?.Name</dd>

                    <dt class="col-sm-4">Date & Time:</dt>
                    <dd class="col-sm-8">@Model.SessionDateTime.ToString("g")</dd>

                    <dt class="col-sm-4">Max Participants:</dt>
                    <dd class="col-sm-8">@Model.MaxParticipants</dd>

                    <dt class="col-sm-4">Available Slots:</dt>
                    <dd class="col-sm-8">@Model.MaxParticipants - (Model.Reservations?.Count() ?? 0)</dd>
                </dl>
            </div>
        </div>

        <!-- Members Joined -->
        @if (Model.Reservations != null && Model.Reservations.Any())
        {
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h4 class="card-title text-primary">Members Joined</h4>
                    <hr />
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Member Name</th>
                                <th>Email</th>
                                <th>Reservation Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var reservation in Model.Reservations)
                            {
                                <tr>
                                    <td>@reservation.User?.UserName</td>
                                    <td>@reservation.User?.Email</td>
                                    <td>@reservation.ReservationDateTime.ToString("g")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
        else
        {
            <div class="alert alert-info text-center">
                No members have joined this session yet.
            </div>
        }

        <!-- Actions -->
        <div class="d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>

            @if (isAdmin)
            {
                <a asp-action="Edit" asp-route-id="@Model?.SessionId" class="btn btn-warning">
                    <i class="bi bi-pencil"></i> Edit
                </a>
            }

            @if (isMember && Model.Reservations.Any(r => r.UserId == userId))
            {
                <form asp-action="Leave" asp-route-id="@Model?.SessionId" method="post" style="display: inline;">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-box-arrow-right"></i> Leave Session
                    </button>
                </form>
            }
        </div>
    </div>
</section>

@section Styles {
    <link href="~/css/session-details.css" rel="stylesheet" />
}