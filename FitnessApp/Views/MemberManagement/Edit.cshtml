@model Microsoft.AspNetCore.Identity.IdentityUser

@{
    ViewData["Title"] = "Edit Member";
}

<h1>Edit Member</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <div class="form-group">
        <label>User Name</label>
        <input type="text" name="username" value="@Model.UserName" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Email</label>
        <input type="email" name="email" value="@Model.Email" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Back to Members</a>
</form>
