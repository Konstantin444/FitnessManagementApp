@model Microsoft.AspNetCore.Identity.IdentityUser

@{
    ViewData["Title"] = "Edit Member";
}

<h1 class="text-center form-title">Edit Member</h1>

<div class="d-flex justify-content-center align-items-center create-form-wrapper">
    <form asp-action="Edit" method="post" class="create-session-form">
        <input type="hidden" name="id" value="@Model.Id" />

        <!-- User Name -->
        <div class="form-group mb-3">
            <label for="username" class="form-label">User Name</label>
            <input type="text" id="username" name="username" value="@Model.UserName" class="form-control" required />
        </div>

        <!-- Email -->
        <div class="form-group mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" id="email" name="email" value="@Model.Email" class="form-control" required />
        </div>

        <!-- Actions -->
        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a asp-action="Index" class="btn btn-secondary">Back to Members</a>
        </div>
    </form>
</div>

<link rel="stylesheet" href="~/css/edit-member.css" asp-append-version="true" />
