@model Microsoft.AspNetCore.Identity.IdentityUser

@{
    ViewData["Title"] = "Delete Member";
}

<h1 class="text-center form-title">Delete Member</h1>

<div class="delete-card mx-auto">
    <h3 class="text-danger text-center">Are you sure you want to delete this member?</h3>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-4">User Name</dt>
            <dd class="col-sm-8">@Model.UserName</dd>

            <dt class="col-sm-4">Email</dt>
            <dd class="col-sm-8">@Model.Email</dd>
        </dl>
    </div>
    <div class="card-footer text-center">
        <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline">
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</div>

<link rel="stylesheet" href="~/css/delete-member.css" asp-append-version="true" />
