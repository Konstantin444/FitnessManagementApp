@{
    ViewData["Title"] = "Add New Member";
}

<h1 class="text-center form-title">Add New Member</h1>

<div class="d-flex justify-content-center align-items-center create-form-wrapper">
    <form asp-action="Create" method="post" class="create-session-form">
        <!-- User Name -->
        <div class="form-group mb-3">
            <label for="username" class="form-label">User Name</label>
            <input type="text" id="username" name="username" class="form-control" required />
        </div>

        <!-- Email -->
        <div class="form-group mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" id="email" name="email" class="form-control" required />
        </div>

        <!-- Password -->
        <div class="form-group mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" id="password" name="password" class="form-control" required />
        </div>

        <!-- Actions -->
        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-primary">Add Member</button>
            <a asp-action="Index" class="btn btn-secondary">Back to Members</a>
        </div>
    </form>
</div>

<link rel="stylesheet" href="~/css/add-member.css" asp-append-version="true" />
